<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    tools:showIn="@layout/main_activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/imagemIcon_xml"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/usuario" />

        <TextView
            android:id="@+id/userName_xml"
            android:layout_width="60dp"
            android:layout_height="21dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/azul"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagemIcon_xml"
            app:layout_constraintVertical_bias="0.0"
            tools:text="username" />

        <TextView
            android:id="@+id/sobreName_xml"
            android:layout_width="61dp"
            android:layout_height="14dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/userName_xml"
            app:layout_constraintTop_toBottomOf="@+id/userName_xml"
            tools:text="Nome Sobrenome" />

        <TextView
            android:id="@+id/repositorioName_xml"
            android:layout_width="314dp"
            android:layout_height="24dp"
            android:textColor="@color/azul2"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imagemIcon_xml"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Nome Repositório" />

        <TextView
            android:id="@+id/repositorioText_xml"
            android:layout_width="314dp"
            android:layout_height="23dp"

            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="9sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imagemIcon_xml"
            app:layout_constraintTop_toBottomOf="@+id/repositorioName_xml"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Os usuários ou utilizadores são pessoas ou organizações que utilizam um determinado tipo de serviço e podem ser classificados segundo a área de interesse." />

        <ImageView
            android:id="@+id/starIcon_xml"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/userName_xml"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/repositorioText_xml"
            tools:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/gitIcon_xml"
            android:layout_width="15dp"
            android:layout_height="15dp"

            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/userName_xml"
            app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/repositorioText_xml"
            tools:src="@drawable/ic_share" />

        <TextView
            android:id="@+id/numeroGit_xml"
            android:layout_width="46dp"
            android:layout_height="23dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:textAllCaps="true"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sobreName_xml"
            app:layout_constraintHorizontal_bias="0.198"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/repositorioText_xml"
            app:layout_constraintVertical_bias="0.69"
            tools:text="640" />

        <TextView
            android:id="@+id/numeroStar_xml"
            android:layout_width="41dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:textAllCaps="true"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/userName_xml"
            app:layout_constraintHorizontal_bias="0.37"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/repositorioText_xml"
            tools:text="98" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>