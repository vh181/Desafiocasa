<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/main_activity"
    android:background="@drawable/bg">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp">
<ImageView
    android:id="@+id/img_icon"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_width="48dp"
    android:layout_height="48dp"
android:background="@drawable/circle"
    tools:src="@drawable/usuario"
    android:layout_marginEnd="26dp"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_icon"
        android:layout_below="@id/img_icon"
        android:textColor="@color/azul"
        android:textSize="16sp"
       tools:text="username" />
    <TextView
        android:id="@+id/sobre_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_icon"
        android:layout_below="@id/user_name"
        android:textColor="@color/gray"
        android:singleLine="true"
        android:textSize="9sp"
        tools:text="Nome Sobrenome" />

    <TextView
        android:id="@+id/reposi_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toStartOf="@id/img_icon"
        android:textColor="@color/azul2"
        android:textStyle="bold"
        tools:text="Nome Repositório" />
    <TextView
        android:id="@+id/repsoi_text"
        android:layout_width="match_parent"
        android:layout_toStartOf="@id/img_icon"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/reposi_name"
        android:layout_below="@id/reposi_name"
        android:textColor="@color/black"
        android:singleLine="true"
        android:textSize="9sp"
        tools:text="Os usuários ou utilizadores são pessoas ou organizações que utilizam um determinado tipo de serviço e podem ser classificados segundo a área de interesse." />
    <ImageView
        android:id="@+id/star_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_width="15dp"
        android:layout_height="15dp"
        tools:src="@drawable/ic_star"
        android:layout_marginLeft="70dp"
        />

    <ImageView
        android:id="@+id/git_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignStart="@id/reposi_name"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="23dp"
        android:layout_marginBottom="1dp"
        tools:src="@drawable/ic_share" />
</RelativeLayout>
    
</androidx.cardview.widget.CardView>